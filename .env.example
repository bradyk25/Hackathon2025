# Database
DATABASE_URL=sqlite:./data/ghostwriter.db

# External APIs
LISTENING_POST_API_URL=https://api.listeningpost.com
LISTENING_POST_API_KEY=your_listening_post_api_key_here

DBTWIN_API_URL=https://api.dbtwin.com
